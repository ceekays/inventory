<%= error_messages_for 'user' %>
<p>
	<label for="user_username" >Username:</label> 
	<%= @username = User.find(:all,:order =>'username').map{|u|[u.username]}
	select(:user, :username, @username,{},{:tt_onload => "$('keyboard').style='display:block;'",:include_blank => true, :textCase => 'lower'})%>
</p>
