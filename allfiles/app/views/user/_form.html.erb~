	#****************************************************************************
	#
	# This is a form partial
	#
	#****************************************************************************
-->
<%= error_messages_for 'user' %>
<% form_for :users do |form| %>
<p>
	<label for="user_username" >Username:</label> 
	<%= @username = User.find(:all,:order =>'username').map{|u|[u.username]}
	select(:user, :username, @username,{},{:include_blank => true, :textCase => 'lower'})%>
</p>

<p>
<label for="users_password" >Password:</label> 
<%= form.password_field :password, :size => 40 %>
</p>

<p>
<label for="users_password_confirmation" >Confirm Password:</label> 
<%= form.password_field :password_confirmation, :size => 40 %>
</p>
<%end%>
