<% fields_for :status do |s|%>
  <%=s.text_field(:item_condition, :helpText => 'Reason:',
    :ajaxURL => '/search/by_model?model0=Status&column0=item_condition&value=',
    :allowFreeText => true) + tag(:br) if fields.include? :reason%>

  <%=s.text_field(:quantity, :field_type => 'number', :helpText => 'Quantity for Item:',
    :allowFreeText => true) + tag(:br) if fields.include? :quantity %>

  <%=s.text_field(:item_conditon, :helpText => 'Condition of Item:',
    :allowFreeText => true) + tag(:br) if fields.include? :item_conditon %>

  <%=s.text_field(:value_datetime, :field_type => 'date',
    :value => DateTime.now().strftime("%d-%m-%Y"), :helpText => 'Date of Reception:',
    :allowFreeText => true) + tag(:br) if fields.include? :date_of_reception%>

  <%=s.text_field(:value_datetime, :field_type => 'date',
    :value => DateTime.now().strftime("%d-%m-%Y"), :helpText => 'Date Dispatched:',
    :allowFreeText => true) + tag(:br) if fields.include? :date_dispatched%>

  <%=s.text_field(:dispatcher, :helpText => 'Delivered by:',
    :ajaxURL => '/search/by_model?model0=Status&column0=dispatcher&value=',
    :allowFreeText => true) + tag(:br) if fields.include? :delivered_by %>

  <%=s.text_field(:dispatcher, :helpText => 'Collected by:',
    :ajaxURL => '/search/by_model?model0=Status&column0=dispatcher&value=',
    :allowFreeText => true) + tag(:br) if fields.include? :collected_by %>

  <%=s.text_field(:location, :helpText => 'Location of Registration:',
    :ajaxURL => '/search/by_model?model0=Status&column0=location&value=',
    :allowFreeText => true) + tag(:br) if fields.include? :regstration_location%>
<% end %>
