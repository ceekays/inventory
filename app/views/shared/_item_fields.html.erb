<% fields_for :item, @item do |i|%>
  <%= i.label(:name,"Item Name/Brand") +
    i.text_field(:name) +
    tag(:br) if fields.include? :name %>
  <%= i.label(:model, "Item Model") +
    i.text_field(:model) +
    tag(:br) if fields.include? :model %>
  <%= i.label(:serial_number, "Serial Number for Item") +
    i.text_field(:serial_number) +
    tag(:br) if fields.include? :serial_number%>
  <%= i.label(:barcode, "Barcode for Item") +
    i.text_field(:barcode) +
    tag(:br) if fields.include? :barcode %>
  <%= i.label(:category, "Item Category") +
    i.text_field(:category) +
    tag(:br) if fields.include? :category%>
  <%= i.label(:manufacturer,"Item Manufacturer") +
    i.text_field(:manufacturer) +
    tag(:br) if fields.include? :manufacturer %>
  <%= i.label(:date_of_reception,"Date of Item Reception") +
    i.text_field(:date_of_reception) +
    tag(:br) if fields.include? :date_of_reception %>
  <%= i.label(:owner,"Assigned to") +
    i.text_field(:owner) +
    tag(:br) if fields.include? :owner%>
  <%= i.label(:project_name,"Item Project Name") +
    i.text_field(:project_name) +
    tag(:br) if fields.include? :project_name%>
  <%= i.label(:location,"Item Location") +
    i.text_field(:location) +
    tag(:br) if fields.include? :location%>
<% end %>

