<% @report_name = 'Ribbon Analysis'%>
<div id="report-content">
  <%= render "report_header"%>
  <div id="report-section">
  <%= render "organizational_details"%>
  <div id='data'>
    
    <table border="0" class="niceTable" >
       <tr class="row">
        <th>Name</th>
        <th>Amount</th>
      </tr>
      <%@Stock_distribution_list.each do |data_row|%>
          <tr class="row">
              <td ><%= data_row.location %></td>
              <td ><%= data_row.amount%></td>             
          </tr>
       <%end rescue nil%>

    </table>
    
    <div id="totals">
      <i> Total Items In : </i> <%=@total_items_in.to_s%>                            
    </div>
  </div>
  </div>
</div>
