				<p class="meta"><%=@my_comment  %></p>
				<div class="entry">
					<p>
                  <h3><%= flash[:notice]%></h3> 
					   <%= yield %> <!%=@my_content%>
					</p>
				</div>
			</div>
			</div>
			</div>
