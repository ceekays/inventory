	<div id="page-bgtop">
	<div id="page-bgbtm">
		<div id="content">
			<div class="post">
			<div class="post-bgtop">
			<div class="post-bgbtm">
				<!-- h1 class="title"><a href="#"> <%# = @my_title||@page.pg_heading %>  </a></h1 -->
